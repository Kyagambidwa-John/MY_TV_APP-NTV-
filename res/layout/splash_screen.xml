<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#00008f"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivityy">
    <ImageView
            android:src="@drawable/ntv12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:id="@+id/image"
            android:visibility="visible"/>
    <TextView
            android:text="Turning on your world"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:gravity="center"
            android:visibility="visible"
            android:textSize="30sp" android:layout_marginTop="16dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/progressBar2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.856" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>

</RelativeLayout>

